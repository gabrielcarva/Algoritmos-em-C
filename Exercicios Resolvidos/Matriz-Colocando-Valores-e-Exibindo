#include <stdio.h>

int main()
{
    int mat[4][4];
    int k = 0, j = 0, n = 0;
    for( j = 0 ; j < 4 ; j++ ){
        for( k = 0 ; k < 4 ; k++ ){
            mat[j][k] = n;
            n+=2;
            printf("%d", mat[j][k]);
            if ( k == 3 ) // 
                printf("\n");
        }
    }
    return 0;
}
