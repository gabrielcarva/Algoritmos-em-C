/******************************************************************************

  V E R I F I C A D O R   DE   Q N T   DE  B Y T E S   DO   A R G U M E N T O

*******************************************************************************/
#include <stdio.h>

int main()
{
    int n = 0;
    char letra = 'a';
    float saldo = 1.5;
    double valor = 3.5;
    int numeros[4] = {1, 4, 38, 45};
    
    printf("-------------------------------------------------------------\n");
    printf("        V E R F I C A D O R    DE   B Y T E S                \n");
    printf("-------------------------------------------------------------\n");
    printf("\n");
    
    printf("int tem: %ld\n", sizeof n);
    printf("char tem: %ld\n", sizeof letra);
    printf("float tem: %ld\n", sizeof saldo);
    printf("double tem: %ld\n", sizeof valor);
    printf("%ld", sizeof numeros);
    
    printf("\n");
    
    printf("int tem: %ld\n", sizeof(int));
    printf("char tem: %ld\n", sizeof(char));
    printf("float tem: %ld\n", sizeof(float));
    printf("double tem: %ld\n", sizeof(double));

    return 0;
}
